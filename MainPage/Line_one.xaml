            <Image Source="arrow.png"  Canvas.Left="725" Canvas.Top="63" />
            <Border  Canvas.Left="760" Canvas.Top="63" Tag="7">
                <TextBlock Text="市民中心"  />
            </Border>
            <Image Source="箭头下 拷贝.png" Canvas.Left="787" Canvas.Top="100" Width="27"/>
            <Border  Canvas.Left="760" Canvas.Top="132" Tag="8">
                <TextBlock Text="西流湖"  />
            </Border>
