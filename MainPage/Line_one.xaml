<Page x:Class="第二组综合设计地铁购票系统.MainPage.Line_one"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:第二组综合设计地铁购票系统.MainPage"
      mc:Ignorable="d" 
     
      Title="Line_one" >
    <Page.Resources>
        <ResourceDictionary>
            <DrawingBrush x:Key="MyGridBrushResource" Opacity="0.25"
            Viewport="0,0,10,10" ViewportUnits="Absolute" TileMode="Tile">
                <DrawingBrush.Drawing>
                    <DrawingGroup>
                        <GeometryDrawing Geometry="M0,0 L1,0 1,1 0,1z"
                        Brush="White" />
                        <GeometryDrawing Brush="#9999FF">
                            <GeometryDrawing.Geometry>
                                <GeometryGroup>
                                    <RectangleGeometry Rect="0,0,1,0.1" />
                                    <RectangleGeometry Rect="0,0.1,0.1,0.9" />
                                </GeometryGroup>
                            </GeometryDrawing.Geometry>
                        </GeometryDrawing>
                    </DrawingGroup>
                </DrawingBrush.Drawing>
            </DrawingBrush>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="{StaticResource MyGridBrushResource}">
        <Canvas  Width="900" Height="500">
            <Canvas.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                    <Setter Property="Width" Value="85"/>
                    <Setter Property="Height" Value="32"/>
                    <Setter Property="Background" Value="#FFF06464" />
                    <EventSetter Event="MouseLeftButtonDown" Handler="Border_MouseLeftButtonDown"/>
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
                <Style TargetType="Image">
                    <Setter Property="Width" Value="35"/>
                </Style>
            </Canvas.Resources>
            <Border Background="#FFF03331" Canvas.Left="40" Canvas.Top="63" Tag="1">
                <TextBlock Text="河南工业大学"  />
            </Border>
            <Image Source="arrow.png"  Canvas.Left="125" Canvas.Top="63" />
            <Border  Canvas.Left="160" Canvas.Top="63" Tag="2">
                <TextBlock Text="郑大科技园"  />
            </Border>
            <Image Source="arrow.png"  Canvas.Left="245" Canvas.Top="63"/>
            <Border  Canvas.Left="280" Canvas.Top="63" Tag="3">
                <TextBlock Text="郑州大学"  />
            </Border>
            <Image Source="arrow.png"  Canvas.Left="365" Canvas.Top="63" />
            <Border  Canvas.Left="400" Canvas.Top="63" Tag="4" >
                <TextBlock Text="梧桐街"  />
            </Border>
            <Image Source="arrow.png"  Canvas.Left="485" Canvas.Top="63" />
            <Border  Canvas.Left="520" Canvas.Top="63" Tag="5">
                <TextBlock Text="兰寨"  />
            </Border>
            <Image Source="arrow.png"  Canvas.Left="605" Canvas.Top="63" />
